@{ 
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewBag.Title = "Record Store";
}

<h1>Welcome to our Record Store!</h1>

<a class="btn btn-primary m-2" href="/Admin/AdminHome">Go to Admin Area</a>
<a class="btn btn-primary m-2" href="/User/UserHome">Go to User Area</a>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://i.imgur.com/u3LUDwL.jpg" alt="Vinyl Collection">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://i.imgur.com/o5Ost34.jpg" alt="Record Player">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://i.imgur.com/I1sA37o.jpg" alt="Cds">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>