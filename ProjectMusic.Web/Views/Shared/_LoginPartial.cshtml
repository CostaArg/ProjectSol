@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <form action="/Account/LogOff" class="navbar-right" id="logoutForm" method="post">

        @Html.AntiForgeryToken()
        <li class="float-left">@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
        <li><input type="submit" value="Logout" class="btn" /></li>
    </form>

    <form action="/Exit/ClearCookies" method="post">
        <li><input type="submit" value="Jugaad" class="btn" /></li>
    </form>

}
else
{
    <li><a href="~/Account/Login">Login</a></li>
    <li><a href="~/Account/Register">Register</a></li>
}
