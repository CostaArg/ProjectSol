@model ProjectMusic.Entities.Domain.Album

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Add Album</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AlbumId, new { htmlAttributes = new { @id = "AlbumId" } })

    <div class="mb-3 card card-body w-50">
        <h5 class="card-title">Album Name</h5>
        <h6 class="card-subtitle">
            @Html.EditorFor(model => model.AlbumName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AlbumName, "", new { @class = "text-danger" })
        </h6>
        <h5 class="card-title">Album Price</h5>
        <h6 class="card-subtitle">
            @Html.EditorFor(model => model.AlbumPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AlbumPrice, "", new { @class = "text-danger" })
        </h6>
        <h5 class="card-title">Album Purchases</h5>
        <h6 class="card-subtitle">
            @Html.EditorFor(model => model.AlbumPurchases, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AlbumPurchases, "", new { @class = "text-danger" })
        </h6>
        <h5 class="card-title">Album Photo Url</h5>
        <h6 class="card-subtitle">
            @Html.EditorFor(model => model.AlbumPhotoUrl, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AlbumPhotoUrl, "", new { @class = "text-danger" })
        </h6>

        <div>

            <h5 class="card-title">Spotify Album Id</h5>
            <h6 class="card-subtitle spotify-field">
                @Html.EditorFor(model => model.SpotifyAlbumId, new { htmlAttributes = new { @class = "form-control", @id = "SpotifyAlbumId" } })
                @Html.ValidationMessageFor(model => model.SpotifyAlbumId, "", new { @class = "text-danger" })
            </h6>

            <button id="spotify" type="button" class="spotify-button btn btn-success">Spotify</button>

        </div>

        <div>
            <input type="submit" value="Create" class="btn btn-success mt-4 main-button" />
            <a href="/Admin/Album" class="btn btn-primary mt-4 w-25 float-right">Back to List</a>
        </div>
    </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
