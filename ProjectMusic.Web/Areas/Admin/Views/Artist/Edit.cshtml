@model ProjectMusic.Entities.Domain.Artist

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Edit Artist</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ArtistId)

        <div class="mb-3 card card-body w-50">
            <h5 class="card-title">Artist Name</h5>
            <h6 class="card-subtitle">
                @Html.EditorFor(model => model.ArtistName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ArtistName, "", new { @class = "text-danger" })
            </h6>
            <h5 class="card-title">Artist Photo Url</h5>
            <h6 class="card-subtitle">
                @Html.EditorFor(model => model.ArtistPhotoUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ArtistPhotoUrl, "", new { @class = "text-danger" })
            </h6>

            <div>
                <input type="submit" value="Save" class="btn btn-success mt-4 main-button" />
                <a href="/Admin/Artist" class="btn btn-primary mt-4 w-25 float-right">Back to List</a>
            </div>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
