@model IEnumerable<ProjectMusic.Entities.Domain.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



    <div class="main-card mb-3 card">
        <div class="card-header">
            Manage Users
        </div>
        <div class="table-responsive">
            <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                <thead>
                    <tr>
                        <th class="text-center">User Id</th>
                        <th>Email and Username</th>
                        <th class="text-center">Email Confirmation</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center text-muted">@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>
                                <div class="widget-content p-0">
                                    <div class="widget-content-wrapper">
                                        <div class="widget-content-left mr-3">
                                            <div class="widget-content-left">
                                                <img width="40" class="rounded-circle" src="assets/images/avatars/4.jpg" alt="">
                                            </div>
                                        </div>
                                        <div class="widget-content-left flex2">
                                            <div class="widget-heading">@Html.DisplayFor(modelItem => item.Email)</div>
                                            <div class="widget-subheading opacity-7">@Html.DisplayFor(modelItem => item.UserName)</div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                @{
                                    if (item.EmailConfirmed)
                                    {
                                        <div class="badge badge-success">True</div>

                                    }
                                    else
                                    {
                                        <div class="badge badge-danger">False</div>
                                    }
                                }
                            </td>
                            <td class="text-center">
                                <a href="/Admin/AppUserAdmin/Details/@item.Id" class="btn-icon btn-icon-only btn btn-primary"><i class="pe-7s-info btn-icon-wrapper"></i> Details</a>
                                <a href="/Admin/AppUserAdmin/Edit/@item.Id" class="btn-icon btn-icon-only btn btn-warning"><i class="pe-7s-edit btn-icon-wrapper"></i> Edit</a>
                                <a href="/Admin/AppUserAdmin/Delete/@item.Id" class="btn-icon btn-icon-only btn btn-danger"><i class="pe-7s-trash btn-icon-wrapper"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="d-block text-center card-footer">
            <a class="btn-icon btn-icon-only btn btn-primary" href="/Admin/AppUserAdmin/Create"><i class="pe-7s-plus btn-icon-wrapper mr-2"></i>Create New</a>
        </div>
    </div>


