@model ProjectMusic.Entities.Domain.Song

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Add Song</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SongId)

        <div class="mb-3 card card-body w-50">
            <h5 class="card-title">Song Name</h5>
            <h6 class="card-subtitle">
                @Html.EditorFor(model => model.SongName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SongName, "", new { @class = "text-danger" })
            </h6>

            <div>
                <input type="submit" value="Create" class="btn btn-success mt-4 main-button" />
                <a href="/Admin/Song" class="btn btn-primary mt-4 w-25 float-right">Back to List</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}