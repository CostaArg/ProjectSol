@model IEnumerable<ProjectMusic.Entities.Domain.Order>

<link href="~/Content/PagedList.css" rel="stylesheet" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<link href="~/Content/adminTheme/main.css" rel="stylesheet" />

<!-- ***** Breadcrumb Area Start ***** -->
<div class="breadcumb-area bg-img bg-overlay" style="background-image: url(/Content/theme/img/bg-img/2.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <h2 class="title mt-70">Orders</h2>
            </div>
        </div>
    </div>
</div>
<div class="breadcumb--con">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Orders</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ***** Breadcrumb Area End ***** -->
<!-- ****** About Us Area Start ******* -->
<section class="about-us-area section-padding-0-80 mt-50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="about-us-content">



                    <div class="main-card mb-3 card">
                        <div class="card-header">
                            Manage Orders
                        </div>
                        <div class="table-responsive">
                            <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-center">Order Id</th>
                                        <th>Album Name and Price</th>
                                        <th class="text-center">User Name</th>
                                        <th class="text-center">Date Purchased</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        if (item.User.UserName == User.Identity.Name)
                                        {
                                            <tr>
                                                <td class="text-center text-muted">@Html.DisplayFor(modelItem => item.OrderId)</td>
                                                <td>
                                                    <div class="widget-content p-0">
                                                        <div class="widget-content-wrapper">
                                                            <div class="widget-content-left flex2">
                                                                <div class="widget-heading">@Html.DisplayFor(modelItem => item.Album.AlbumName)</div>
                                                                <div class="widget-subheading opacity-7">@Html.DisplayFor(modelItem => item.Album.AlbumPrice)</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <div>
                                                        @Html.DisplayFor(modelItem => item.User.UserName)
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <div>
                                                        @Html.DisplayFor(modelItem => item.DatePurchased)
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="d-block text-center card-footer">

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- ****** About Us Area End ****** -->